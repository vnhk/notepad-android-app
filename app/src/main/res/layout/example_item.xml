<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:id="@+id/item_relative_layout">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/headerNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_view"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/image_view" />

        <TextView
            android:id="@+id/secondaryNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerNote"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image_view"
            android:text="Line 2"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_view" />

          <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondaryNote"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/image_view"
            android:text="Tags:"
            android:textSize="11sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_view" />


        <ImageView
            android:id="@+id/showNote"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            app:srcCompat="@drawable/icon_details"
            android:contentDescription="details" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>